/dts-v1/;

#include "mt7620a.dtsi"

/ {
	compatible = "flo,i2cd", "ralink,mt7620a-soc";
	model = "Flo I2CD";

	chosen {
		bootargs = "console=ttyS1,57600";
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		btn_1 {
			label = "btn_1";
			gpios = <&gpio0 17 1>;
			linux,code = <0x101>;
		};
	};
};

&spi0 {
	status = "okay";

	m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		linux,modalias = "m25p80", "en25q64";
		spi-max-frequency = <10000000>;

		partition@0 {
			label = "u-boot";
			reg = <0x0 0x30000>;
			read-only;
		};

		partition@30000 {
			label = "u-boot-env";
			reg = <0x30000 0x10000>;
		};

		factory: partition@40000 {
			label = "factory";
			reg = <0x40000 0x10000>;
		};

		partition@50000 {
			label = "firmware";
			reg = <0x50000 0x7b0000>;
		};
	};
};

&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "i2c", "wdt";
			ralink,function = "gpio";
		};
	};

	uartf_pins: uartf {
		uart {
			ralink,group = "uartf";
			ralink,function = "uartf";
		};
	};
};

&uart {
	pinctrl-names = "default";
	pinctrl-0 = <&uartf_pins>;

	status = "okay";
};

&sdhci {
	status = "okay";
};

&ethernet {
	mtd-mac-address = <&factory 0x4>;
	mediatek,portmap = "llllw";
};

&wmac {
	ralink,mtd-eeprom = <&factory 0>;
};
